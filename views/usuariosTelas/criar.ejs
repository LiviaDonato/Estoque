<body class="atras">
    <%- include('../includes/header.ejs', {titulo: 'Adicionar Usuário'}) %>
<body class="atras text-white">
    <main>
        <h2 class="text-center text-white">Adicionar Novo usuario</h2>
        <form action="/usuarios/novo" method="post" class="form">
            <div class="form-group">
                <label for="nome">Nome do Usuário: </label>
                <input type="text" id="nome" name="nome" required>
            </div>
            <div class="form-group">
                <label for="usuario">Usuário: </label>
                <input type="text" id="usuario" name="usuario" required>
            </div>
            <div class="form-group">
                <label for="senha">Senha: </label>
                <input type="password" class="form-control" id="senha" name="senha" required>
            </div>
            <div class="form-group">
                <label for="foto">Foto: </label>
                <input type="url" id="foto" name="foto" required>
            </div>
            <button type="submit" class="btn btn-primary bAdi border-white"> Adicionar </button>
            <a href="/usuarios" class="btn btn-secondary bEx border-white"> Cancelar </a>
        </form>
    </main>
</body>
<%- include('../includes/footer.ejs') %>
</body>